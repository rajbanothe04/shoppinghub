{
  "name": "eslint-config-blueimp",
  "version": "2.2.0",
  "description": "ESLint config for blueimp projects.",
  "keywords": [
    "eslint",
    "config",
    "blueimp"
  ],
  "homepage": "https://github.com/blueimp/eslint-config-blueimp",
  "author": {
    "name": "Sebastian Tschan",
    "url": "https://blueimp.net"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/blueimp/eslint-config-blueimp.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=10.0.0"
  },
  "devDependencies": {
    "eslint": "7",
    "eslint-config-prettier": "6",
    "eslint-plugin-jsdoc": "30",
    "eslint-plugin-node": "11",
    "eslint-plugin-prettier": "3",
    "prettier": "2",
    "typescript": "4"
  },
  "peerDependencies": {
    "eslint": ">=7"
  },
  "eslintConfig": {
    "extends": [
      ".",
      "plugin:jsdoc/recommended",
      "plugin:node/recommended",
      "plugin:prettier/recommended"
    ]
  },
  "prettier": {
    "arrowParens": "avoid",
    "proseWrap": "always",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "scripts": {
    "test": "eslint . && tsc",
    "preversion": "npm test",
    "postversion": "git push --tags origin HEAD && npm publish"
  },
  "files": [
    "index.js"
  ],
  "main": "index.js"
}
